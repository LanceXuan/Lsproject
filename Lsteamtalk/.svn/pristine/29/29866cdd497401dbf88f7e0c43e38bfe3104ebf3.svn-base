@charset "utf-8";
/* CSS Document */


#top{background-color:#4D4D4F;width:100%;margin:0; padding:0;height:100%; overflow:hidden;}
#top dl{font:12px/23px Tahoma,Arial,"宋体",sans-serif; width:990px; height:26px; line-height:26px;overflow:hidden;color:#FFF;margin:0 auto;}
#top a{color:#FFF; text-decoration:none;height:26px; line-height:26px; display:inline-block;}
#top a:hover{color:#FF3; text-decoration:none;}
#top dl dt{float:left;width:36%;color:#FFF;}
#top dl dd{float:right; width:60%; text-align:right;color:#FFF;}
#top dl dd i{border-right:1px solid #777; width:1px; height:10px;overflow:hidden; margin:0 12px;}

#header {
font: 12px/23px Tahoma,Arial,"宋体",sans-serif;
width:100%;height:100%; overflow:hidden;
padding:0;
margin-top:0;
margin-bottom:0;
background:#FFF url(../Images/HeaderRepeatBg.gif) 0 bottom repeat-x;
}
#header dl{width:990px;margin:0 auto;}
#header dl dt{float:left; width:30%;height:100%;overflow:hidden;*height:97px;}
#header dl dt a{margin:0;display:block;width:203px;height:43px;margin:20px 0 24px 0;float:left;background: rgba(191, 64, 64, 0) url("../Images/logo.png") no-repeat scroll 0px 0px;}
#header dl dd{float:right;width:60%;}

#NavItems{background-color:#DFC087;width:100%;}
#NavItems p{width:970px;margin: 0 auto;height:36px; padding:0 10px;}
#NavItems p a{display:block;float:left;font: normal 14px '微软雅黑','yahei','宋体', Tahoma,Arial;padding:0 12px;color:#FFF;height:25px;line-height:24px;margin-top:6px;margin-left:3px;
text-shadow:2px 2px 1px #D0A350;-moz-border-radius: 4px; /* FF1+ */-webkit-border-radius: 4px; /* Saf3+, Chrome */border-radius: 4px; /* Opera 10.5, IE 9 */}
#NavItems a:hover,#NavItems a.select{color:#000;text-decoration:none;background-color:#FFF;text-shadow:2px 2px 1px #FFF;}