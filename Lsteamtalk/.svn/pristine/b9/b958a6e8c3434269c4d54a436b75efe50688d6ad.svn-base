@charset "utf-8";
/* CSS Document */

#footer{margin-top: 30px; padding:0 0 60px 0;border-top: 2px solid #C0C0C0;color:#AAA;height: 100%;overflow:hidden;}
#footer table{width:990px;margin:0 auto;text-align:center;}
#footer a{color:#666;}
#footer em{color:#BBB;font: 12px normal "宋体",Arial, Helvetica, sans-serif; margin:0 8px;}

#FriendLink{color:#AAA;width:990px;margin:4px auto 4px auto;height: 100%;overflow:hidden;}
#FriendLink span{display:block;float:left;height:24px;line-height:24px;margin:0 12px 0 0;}
#FriendLink a{color:#AAA;text-decoration:none;margin:0 24px 0 0;display:block;float:left;height:24px;line-height:24px;font-weight: normal;
white-space:nowrap;}
#FriendLink a:hover{color:#07C;}