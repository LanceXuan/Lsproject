//删除方法
function remove(){
	var  node  = $('#t_user').datagrid('getSelections');
	alert(node[0].id);
	if(node == null || node == 'underdefined'|| node.length >1)
	{
		  $.messager.alert('提示信息','请选择一个用户!');
		  return false;
	}
	
	$.messager.confirm("提示信息","确认删除?",function(r){
			if(r){
				// 1前台删除

	//			$('#t_user').datagrid('remove',node.id);
				
				$.ajax({
					type:'post',
					url:'../privilegemgmt/users.action?method=delete',
					cache:false,
					dateType:'json',
					data:{
						id:node[0].id
					},
					success:function(r){
						var d = JSON.parse(r);
						if(d[0]==null){
							alert("内部错误,请与信息管理中心联系,谢谢！");
						}else{
							var da = d[0];
							if(!da.hasError){
								
								$.messager.show({
									title:'提示信息',
									msg:'删除成功!'
								});
								 $('#t_user').datagrid('reload'); 
							}else{
								alert(da.exceptionMag);
							}
						}
					},
					error:function(data){
						$.messager.show({
							title:'提示信息',
							msg:'操作失败，错误信息为:'
						});
					}
				});
			} else {
				return ;
			}
			
	});
}

