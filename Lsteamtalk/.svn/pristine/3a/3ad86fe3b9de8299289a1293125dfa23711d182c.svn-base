$(function(){
	InitPage();
});


function InitPage(){
    $('#t_notice').datagrid({
        idField:'id',
        title:'公告列表',
        url:'../privilegemgmt/ccNotice.action',	
        fit:true,
		height:550,
		width:700,
	//	fitColumns:true,
		striped:true,
		loadMsg:'loading...',
		rownumbers:true,
		collapsible:true,
        remoteSort:false,
        nowrap:false,
        pagination:true,
//      singleSelect:true,
//      remoteSort:false,
        rowStyler:function(index,record){
//        	if(record.sex==0){
//        		return "background:green";
//        	}
        },
        frozenColumns:[[      //冻结列特性，不要与fitColumns特性一起使用
            {
                field:'ck',
                width:50,
                checkbox:true
            }
         ]],
         columns:[[
                   {
		         	field:'id',
		        	title:'ID',
		        	width:50,
		        	align:'center'
		           },{
                	field:'name',
                	title:'标题',
                	width:450,
                	align:'center',
                	formatter:function(val,rec){
        		//	return '<a href="../privilegemgmt/ccNotice.action?method=getCcNotice&noticeId='+rec.id'">('+val+')</a>';
        			return '<a href="../privilegemgmt/ccNotice.action?method=getCcNotice&iceId='+rec.id+'" target="_blank" style="color:red;">'+rec.title+'</a>';
        			} 
                   },{
                	   field:'created',
                	   title:'发布时间',
                	   width:240,
                	   align:'center'
                   },{
                	   field:'MarkRead',
                	   title:'已读人',
                	   width:240,
                	   align:'center',
                	   hidden:true
                   }
         ]],
         pageSize:20,
         pageList:[5,10,15,20,50],
            toolbar :'#tb'
    });
}



function openLink(){
	window.open("../ccNotice.jsp");
}