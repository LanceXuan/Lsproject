function deleteLink(){
	var node = $('#t_notice').datagrid('getSelections');
	var ids = "";
	for(var i=0;i<node.length;i++){
		ids += node[i].id+",";
	}
	ids = ids.substring(0, ids.length-1);
	$.ajax({
		type : 'post',
		url : '../privilegemgmt/ccNotice.action',
		cache : false,
		dataType : 'json',
		data : {
			method : "deleteCcNotice",
			noticeIds:ids
		},
		success: function(data) {
			$.messager.alert('提示信息','删除成功!');
		}
	});
}